{
  "name": "attendy",
  "productName": "QR Attendy",
  "version": "1.0.0",
  "description": "QR attendance system",
  "license": "AGPL-3.0-only",
  "author": "ace",
  "type": "module",
  "main": "source/snapdragon.js",
  "scripts": {
    "start": "electron .",
    "watch": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "title.attendy.test",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "icon": "main/package/media/QR_attendy/icon-LOGO.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "main/package/media/icon-LOGO.ico",
      "uninstallerIcon": "main/package/media/icon-LOGO.ico",
      "uninstallDisplayName": "Nuclear Bomb",
      "license": "LICENSE"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "chokidar": "^5.0.0",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0"
  }
}
